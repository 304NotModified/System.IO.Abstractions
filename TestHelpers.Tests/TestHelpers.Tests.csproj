    <Authors>Tatham Oddie</Authors>
    <RootNamespace>System.IO.Abstractions.TestingHelpers.Tests</RootNamespace>
    <AssemblyOriginatorKeyFile>../StrongName.pfx</AssemblyOriginatorKeyFile>
